<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="900" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentattendanceandmanagementsystem.File_Menu_Controller.AboutController">

    <center>
        <TabPane prefHeight="700.0" prefWidth="900.0">
            <!-- Tab 1: Overview -->
            <Tab closable="false" text="Overview">
                <VBox alignment="CENTER" spacing="15" styleClass="tab-content">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label styleClass="headerText" text="About Student Attendance Management System" />
                    <Label styleClass="general-label" text="The Student Attendance Management System (SAMS) is a robust JavaFX desktop application designed to streamline attendance tracking and student record management for educational institutions. It offers an intuitive interface, real-time data updates, and customizable reporting features to enhance administrative efficiency." wrapText="true" />
                    <Label styleClass="headerText" text="Key Features:" />
                    <Label styleClass="general-label" text="• Automated attendance recording with dob and status tracking" wrapText="true" />
                    <Label styleClass="general-label" text="• Comprehensive student profile management" wrapText="true" />
                    <Label styleClass="general-label" text="• Detailed attendance and performance reports" wrapText="true" />
                    <Label styleClass="general-label" text="• Theme customization for enhanced user experience" wrapText="true" />
                    <Label styleClass="general-label" text="Developed by: SAMS Development Team" />
                </VBox>
            </Tab>

            <!-- Tab 2: Developer Info -->
            <Tab closable="false" text="Developer Info">
                <VBox alignment="CENTER" spacing="15" styleClass="tab-content">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label styleClass="headerText" text="About the Development Team" />
                    <Label styleClass="general-label" text="The SAMS Development Team comprises experienced software engineers dedicated to creating reliable and user-friendly educational tools. With expertise in Java and JavaFX, we aim to empower schools and colleges with efficient management solutions." wrapText="true" />
                    <Label styleClass="headerText" text="Contact Us:" />
                    <Label styleClass="general-label" text="Email: support@sams.edu" />
                    <Label styleClass="headerText" text="Website:" />
                    <Hyperlink onAction="#handleWebsiteLink" styleClass="link-label" text="www.sams.edu" />
                    <Label styleClass="general-label" text="GitHub Repository:" />
                    <Hyperlink onAction="#handleGitHubLink" styleClass="link-label" text="github.com/sams-project" />
                </VBox>
            </Tab>

            <!-- Tab 3: Version Info -->
            <Tab closable="false" text="Version Info">
                <VBox alignment="CENTER" spacing="15" styleClass="tab-content">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label styleClass="headerText" text="Version Information" />
                    <Label styleClass="general-label" text="Application Version: 2.1.3" />
                    <Label styleClass="general-label" text="Java Version: 21" />
                    <Label styleClass="general-label" text="JavaFX Version: 23.0.1" />
                    <Label styleClass="general-label" text="Last Update: April 15, 2025" />
                    <Label styleClass="general-label" text="Build Number: SAMS-2025-04-015" />
                    <Label styleClass="headerText" text="What's New in 2.1.3:" />
                    <Label styleClass="general-label" text="• Added multi-language support" wrapText="true" />
                    <Label styleClass="general-label" text="• Improved report export functionality" wrapText="true" />
                    <Label styleClass="general-label" text="• Fixed minor UI bugs" wrapText="true" />
                </VBox>
            </Tab>

            <!-- Tab 4: Technology Stack -->
            <Tab closable="false" text="Technology Stack">
                <VBox alignment="CENTER" spacing="15" styleClass="tab-content">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label styleClass="headerText" text="Built With" />
                    <Label styleClass="general-label" text="• Java 21 - Core programming language for robust performance" />
                    <Label styleClass="general-label" text="• JavaFX 23.0.1 - Modern UI framework for responsive interfaces" />
                    <Label styleClass="general-label" text="• Scene Builder - Visual layout design for FXML files" />
                    <Label styleClass="general-label" text="• MySQL 8.0 - Database for secure and scalable data storage" />
                    <Label styleClass="general-label" text="• Hibernate ORM - Simplifies database interactions" />
                    <Label styleClass="general-label" text="• Maven - Dependency management and build automation" />
                </VBox>
            </Tab>

            <!-- Tab 5: License -->
            <Tab closable="false" text="License">
                <VBox alignment="CENTER" spacing="15" styleClass="tab-content" >
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label styleClass="headerText"  text="License Information" />
                    <Label styleClass="general-label" text="The Student Attendance Management System is licensed under the MIT License. You are free to use, modify, and distribute this software for personal, educational, or commercial purposes, provided that the original copyright notice is retained." wrapText="true" />
                    <Label styleClass="general-label" text="See the full license details here:" />
                    <Hyperlink onAction="#handleLicenseLink" styleClass="headerText" text="MIT License" />
                    <Label styleClass="general-label" text="Third-party libraries used in this project are subject to their respective licenses." wrapText="true" />
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
